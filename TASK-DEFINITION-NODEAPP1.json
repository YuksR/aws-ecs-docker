{
  "family": "your-task-family",
  "executionRoleArn": "arn:aws:iam::745687159599:role/ecsTaskExecutionRole",
  "networkMode": "default",
  "containerDefinitions": [
    {
      "name": "nodejs",
      "image": "745687159599.dkr.ecr.us-east-1.amazonaws.com/nodejs:v1",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "memory": 1024,
      "cpu": 1024
    }
  ],
  "requiresCompatibilities": [
    "EC2"
  ],
  "cpu": "1024",
  "memory": "1024",
  "tags": [
    {
      "key": "Name",
      "value": "nodeapp-task"
    }
  ]
}
